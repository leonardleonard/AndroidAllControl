<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="apptheme" parent="android:Theme.Light"/>
    <style name="activitys">
        <item name="android:background">#FFCCFF</item>
    </style>
	<style name="textviews">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginBottom">3dp</item>
	    <item name="android:paddingTop">2dp</item>
	    <item name="android:paddingBottom">2dp</item>
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#00FFFF</item>
	    <item name="android:background">#999999</item>
	</style>
	<style name="buttons">
	    <item name="android:layout_width">80dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">11sp</item>
	    <item name="android:textColor">#3CB371</item>
	</style>
	<style name="hcont">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">11sp</item>
	    <item name="android:textColor">#3CB371</item>
	    <item name="android:autoLink">all</item>
	</style>
	<style name="imagebuttons">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">center_horizontal</item>
	</style>
	<!--其他-->
	<style name="txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FA9A</item>
        <item name="android:textStyle">bold</item>
    </style>
	<style name="Theme.AccountDialog" parent="android:style/Theme.Dialog">
    	<item name="android:windowBackground">@drawable/icob_clock</item>
	</style>
    <declare-styleable name="lkpic_gal"><attr name="android:galleryItemBackground"/></declare-styleable>
</resources>